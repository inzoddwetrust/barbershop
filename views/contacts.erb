<div class="container">

  <h2>Contacts</h2>
  <p>Phone number: +799945499099</p>

  <form action="/contacts" method="POST" role="form">
    <div class="form-group">
      <label>Ваше e-mail</label>
      <input name="email" type="e-mail" class="form-control" placeholder="box@example.com" value=<%=@email%>>
    </div>

    <div class="form-group">
      <label>Введите ваш вопрос:</label>
      <p><textarea name="text" type="text" class="form-control" rows="10" cols="1" placeholder="Message" value=<%=@text%>></textarea></p>
    </div>

    <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>
